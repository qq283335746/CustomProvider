<?xml version="1.0"?>
<!--
  有关如何配置 ASP.NET 应用程序的详细信息，请访问
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
	<connectionStrings>
		<clear/>
		<add name="AspnetDbConnString" connectionString="Data Source=|DataDirectory|AspnetDb.db;"/>
	</connectionStrings>
	<appSettings>
	</appSettings>
	<system.web>
		<compilation debug="true" targetFramework="4.0"/>
		<authentication mode="Forms">
			<forms name=".TygaSoftFm" path="/" timeout="60" protection="All" slidingExpiration="true" requireSSL="false" cookieless="UseCookies"/>
		</authentication>
		<membership defaultProvider="SQLiteMembershipProvider" hashAlgorithmType="SHA1">
			<providers>
				<clear/>
				<add name="SQLiteMembershipProvider" type="TygaSoft.CustomProvider.SQLiteMembershipProvider,TygaSoft.CustomProvider" connectionStringName="AspnetDbConnString" applicationName="TygaSoftApp" requiresUniqueEmail="false" enablePasswordRetrieval="false" enablePasswordReset="true" requiresQuestionAndAnswer="false" passwordFormat="Hashed" minRequiredPasswordLength="6" minRequiredNonalphanumericCharacters="0" maxInvalidPasswordAttempts="15" passwordAttemptWindow="10" passwordStrengthRegularExpression="^([0-9a-zA-Z]+){6,30}$"/>
			</providers>
		</membership>
		<roleManager defaultProvider="SQLiteRoleProvider" enabled="true" cookieName=".TygaSoftRole" cookiePath="/" cookieProtection="All" cookieRequireSSL="false" cookieSlidingExpiration="true" cookieTimeout="30" createPersistentCookie="false" cacheRolesInCookie="true" maxCachedResults="25">
			<providers>
				<clear/>
				<add name="SQLiteRoleProvider" type="TygaSoft.CustomProvider.SQLiteRoleProvider,TygaSoft.CustomProvider" connectionStringName="AspnetDbConnString" applicationName="TygaSoftApp"/>
			</providers>
		</roleManager>
		<anonymousIdentification enabled="false"/>
		<profile automaticSaveEnabled="false" enabled="false" defaultProvider="SQLiteProfileProvider">
			<providers>
				<clear/>
				<add name="SQLiteProfileProvider" type="TygaSoft.CustomProvider.SQLiteProfileProvider,TygaSoft.CustomProvider" connectionStringName="AspnetDbConnString" applicationName="TygaSoftApp" description=""/>
			</providers>
		</profile>
	</system.web>
	<system.web.extensions>
		<scripting>
			<webServices>
				<authenticationService enabled="true" requireSSL="false"/>
				<profileService enabled="false" readAccessProperties="MobilePhone"/>
				<roleService enabled="true"/>
			</webServices>
		</scripting>
	</system.web.extensions>
	<system.serviceModel>
		<serviceHostingEnvironment aspNetCompatibilityEnabled="true"/>
		<services>
			<service name="System.Web.ApplicationServices.AuthenticationService">
				<endpoint binding="basicHttpBinding" bindingNamespace="http://TygaSoft.Services.Security" contract="System.Web.ApplicationServices.AuthenticationService"/>
			</service>
			<service name="System.Web.ApplicationServices.RoleService">
				<endpoint binding="basicHttpBinding" bindingNamespace="http://TygaSoft.Services.Security" contract="System.Web.ApplicationServices.RoleService"/>
			</service>
			<service name="System.Web.ApplicationServices.ProfileService">
				<endpoint binding="basicHttpBinding" bindingNamespace="http://TygaSoft.Services.Security" contract="System.Web.ApplicationServices.ProfileService"/>
			</service>
		</services>
		<bindings>
			<basicHttpBinding>
				<binding>
					<security mode="None"></security>
				</binding>
			</basicHttpBinding>
			<wsHttpBinding>
				<binding>
					<security mode="None"></security>
				</binding>
			</wsHttpBinding>
		</bindings>
		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceMetadata httpGetEnabled="True"/>
					<serviceDebug includeExceptionDetailInFaults="True"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>
